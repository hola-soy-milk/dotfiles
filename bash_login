export EDITOR="vim"
export CVSEDITOR="vim"
export SVN_EDITOR="vim"
export NODE_PATH=$(npm config get prefix)/lib/node_modules

# git config --global core.editor "atom --wait"
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
export CLICOLOR=1

export LSCOLORS=GxFxCxDxBxegedabagaced

alias la='ls -A'
alias ll='ls -l'
# alias vim="/Applications/MacVim.app/Contents/MacOS/Vim"

touch_and_open() {
  touch $1
  open $1
}

alias tao=touch_and_open

line_count() {
  find . -name '*.rb' | xargs wc -l
}

alias lc=line_count

# From Zach Holman's talk "Git and GitHub Secrets:
# http://www.confreaks.com/videos/1229-aloharuby2012-git-and-github-secrets
git config --global alias.st 'status -sb --ignore-submodules=untracked'

git config --global alias.co 'checkout'

git config --global alias.ci 'commit'

git config --global alias.cob 'checkout -b'

git config --global alias.rmb '!sh -c 'git branch -D $1 && git push origin :$1' -'

git config --global alias.yolopush 'push --force'

git config --global alias.cleanup '!git remote prune origin && git gc && git clean -dfx && git stash clear'

# Use matching git pushing method
git config --global push.default matching

git config --global alias.lg "log --color --graph --decorate --oneline"

if [ -f /opt/local/etc/bash_completion ]; then
    . /opt/local/etc/bash_completion
fi

if [ -f ~/git-completion.bash ]; then
  . ~/git-completion.bash
fi

source ~/.profile
